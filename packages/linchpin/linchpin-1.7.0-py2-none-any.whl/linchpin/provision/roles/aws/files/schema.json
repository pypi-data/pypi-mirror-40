            },
            {
                "type": "dict",
                "schema": {
                    "role": {
                        "type": "string",
                        "required": true,
                        "allowed": ["aws_cfn"] },
                    "name": { "type": "string", "required": true },
                    "region": { "type": "string", "required": true },
                    "template_path": { "type": "string", "required": true }
                }
            }]
