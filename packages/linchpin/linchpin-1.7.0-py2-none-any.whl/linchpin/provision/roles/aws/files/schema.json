            },
            {
                "type": "dict",
                "schema": {
                    "role": {
                        "type": "string",
                        "required": true,
                        "allowed": ["aws_s3"] },
                    "name": { "type": "string", "required": true },
                    "region": { "type": "string", "required": false },
                    "permission": { "type": "string", "required": false }
