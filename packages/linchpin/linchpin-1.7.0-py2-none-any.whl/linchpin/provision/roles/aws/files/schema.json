                        "type": "list",
                        "required": true,
                        "schema": {
                            "type": "dict",
                            "schema": {
                                "rule_type": { "type": "string", "required": false },
                                "from_port": { "type": ["string", "number"], "required": false },
                                "to_port": { "type": ["string", "number"], "required": false },
                                "proto": { "type": "string", "required": false },
