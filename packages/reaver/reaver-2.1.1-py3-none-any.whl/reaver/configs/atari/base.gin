# ...

# params for PPO:
# ==========================================
PPOAgent.batch_sz = 128
PPOAgent.traj_len = 16

PPOAgent.gae_lambda = 0.95

PPOAgent.n_updates = 10
PPOAgent.minibatch_sz = 512
PPOAgent.clip_ratio = 0.2