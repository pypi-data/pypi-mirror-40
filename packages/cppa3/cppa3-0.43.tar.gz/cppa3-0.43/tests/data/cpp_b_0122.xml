                <cppa:Description xml:lang="en">An example business document</cppa:Description>
            </cppa:Schema>
        </cppa:PayloadPart>
    </cppa:PayloadProfile>
    <cppa:PayloadProfile id="bpp2">
        <cppa:PayloadPart maxOccurs="1">
            <cppa:PartName>businessdocument</cppa:PartName>
            <cppa:Schema namespace="urn:example.org:bd" location="http://schemas.example.org/bd.xsd" version="2.0" >
