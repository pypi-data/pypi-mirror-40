    <cppa:ProfileInfo>
        <cppa:ProfileIdentifier>Bcpp</cppa:ProfileIdentifier>
        <cppa:ActivationDate>2014-01-01T00:00:00</cppa:ActivationDate>
        <cppa:ExpirationDate>2021-01-01T00:00:00</cppa:ExpirationDate>
        <cppa:PhaseIn>P10D</cppa:PhaseIn>
    </cppa:ProfileInfo>
    <cppa:PartyInfo>
