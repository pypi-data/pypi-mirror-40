            <cppa:Service>OrderingBilling</cppa:Service>
            <cppa:ActionBinding id="BiiTrns001_R" action="SubmitOrder" sendOrReceive="receive" >
                <cppa:ChannelId>ch1</cppa:ChannelId>
                <cppa:PayloadProfileId>bpp1</cppa:PayloadProfileId>
                <cppa:PayloadProfileId>bpp2</cppa:PayloadProfileId>
            </cppa:ActionBinding>
        </cppa:ServiceBinding>
    </cppa:ServiceSpecification>
