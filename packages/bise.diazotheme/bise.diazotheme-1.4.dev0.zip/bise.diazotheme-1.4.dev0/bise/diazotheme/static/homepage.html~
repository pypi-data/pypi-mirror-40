            <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
            <script>
            (function() {

                jQuery.extend(jQuery.easing, {
                    'easeOutQuint': function(x, t, b, c, d) {
                        return c * ((t = t / d - 1) * t * t * t * t + 1) + b;
                    }
                });

                var $hlSlider = $('#highlights-slider').find('.highlights').slick({
                    autoplaySpeed: 5000,
                    speed: 1000,
                    easing: 'easeOutQuint',
                    adaptiveHeight: false,
                    nextArrow: null,
                    prevArrow: null,
                    useCSS: false
                });
                var $hlSliderCounter = $('#highlights-slider').find('.slider-counter');
                var $hlSliderNav = $('#slider-nav');

                $('.highlight').each(function() {
                    url = $(this).find('a').attr('href');
                    $(this).click(function() {
                        window.location = url;
                    });
                })

                var i;

                var updateBackgroundPhoto = function(current, next, count) {

                    var dir = next - current;
                    console.log(current, next, count);
                    if (next == 0 && current == count - 1) {
                        dir = 1;
                        console.log('from left');
                    }
                    if (next == count - 1 && current == 0) {
                        dir = -1;
                        console.log('from right');
                    }

                    $currentImg = $('.highlight-photos img:nth-child(' + (current + 1) + ')');
                    $nextImg = $('.highlight-photos img:nth-child(' + (next + 1) + ')');
                    $nextImg.css({
                        'display': 'block',
                        'left': dir * 100 + '%'
                    }).animate({
                        'left': 0
                    }, 1000, 'easeOutQuint', function() {
                        $currentImg.removeClass('current-slide').css({
                            'display': 'none'
                        });
                        $nextImg.addClass('current-slide');
                    })
                };

                $hlSlider.on('beforeChange', function(e, slick, currentSlide, nextSlide) {
                    i = (nextSlide ? nextSlide : 0) + 1;
                    $hlSliderCounter.text(i + '/' + slick.slideCount);

                    updateBackgroundPhoto(currentSlide, nextSlide, slick.slideCount);
                });

                $hlSliderNav.find('.slider-prev').click(function() {
                    $hlSlider.slick('slickPrev');
                });

                $hlSliderNav.find('.slider-next').click(function() {
                    $hlSlider.slick('slickNext');
                });
            }())
            </script>
            <script>
$(document).ready(function() {
// set the date we're counting down to
var target_date = new Date("Jan 2, 2021").getTime();
 
// variables for time units
var days;
 
// get tag element
var countdown = document.getElementById("countdown");
 
// update the tag with id "countdown" every 1 second

 
    // find the amount of "seconds" between now and target
    var current_date = new Date().getTime();
    var seconds_left = (target_date - current_date) / 1000;


    // do some time calculations
    days = parseInt(seconds_left / 86400);
    seconds_left = seconds_left % 86400;
        


    // format countdown string + set tag value
    countdown.innerHTML = days;  
 });
            </script>


